{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "cssPriority": "user",

  "control-center-width": 325,
  "notification-window-width": 450,

  "widgets": [
    "title",
    "buttons-grid#connectivity",
    "volume",
    "backlight",
    "mpris",
    "notifications",
    "dnd",
    "buttons-grid#power"
  ],

  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "󰆴 Clear"
    },
    "dnd": {
      "text": "Do-not-disturb"
    },
    "mpris": {
      "image-size": 90,
      "image-radius": 10,
      "blacklist": ["kew", "firefox", "spotify"]
    },
    "volume": { "label": "󰕾" },
    "backlight": { "label": "󰃟" },

    "buttons-grid#connectivity": {
      "actions": [
        { "label": "󰖩", "command": "kitty nmtui" },
        { "label": "󰂯", "command": "kitty bluetui" },
	{ "label": "󰕾", "command": "kitty pulsemixer" },
        { "label": "󰆴", "command": "swaync-client -C" }
      ]
    },

    "buttons-grid#power": {
      "actions": [
        { "label": "󰌾", "command": "swaylock-corrupter" },
        { "label": "󰍃", "command": "hyprctl dispatch exit" },
        { "label": "󰜉", "command": "systemctl reboot" },
        { "label": "󰐥", "command": "systemctl poweroff" }
      ]
    }
  }
}
