/* ============================================================================
   WAYBAR STYLES - STANDARDIZED (4px Grid)
   ============================================================================ */

* {
    font-family: "Symbols Nerd Font", "SF Pro Display", "Inter", "JetBrains Mono", sans-serif;
    font-size: 14px;
    font-weight: 700;
    min-height: 0;
}

window#waybar {
    background: radial-gradient(circle, #300137 0%, #090217 100%);
    border-bottom: 3px solid #5C0143;
    color: #FEFDFA;
}

window#waybar.hidden {
    opacity: 0.2;
}

/* === Modules General === */
.modules-left, .modules-center, .modules-right {
    background: transparent;
    padding: 0 4px;
}

#custom-launcher,
#workspaces,
#clock,
#network,
#bluetooth,
#battery,
#pulseaudio,
#custom-notification,
#tray,
#custom-power,
#power-profiles-daemon {
    background: rgba(143, 5, 77, 0.15);
    /* Standard Padding: 4px top/bottom, 12px left/right */
    /* Standard Margin: 4px top/bottom, 4px left/right */
    margin: 4px 4px 7px 4px;
    /* Standard Radius: 4px for consistency */
    border-radius: 4px;
    transition: all 0.3s ease;
    min-height: 24px; /* Ensure consistent height */
    min-width: 24px;
}

/* === Workspaces === */
#workspaces {
    background: rgba(143, 5, 77, 0.15);
    margin-left: 4px;
    padding: 0px 8px; /* Internal padding for the container */
}

#workspaces button {
    padding: 0 5px; /* Symmetric padding */
    min-width: 16px; /* Ensure enough width for icon */
    color: rgba(254, 253, 250, 0.3);
    border-radius: 99px; /* Pill/Circle shape */
    margin: 4px 2px;
    transition: all 0.3s ease-in-out; /* Smooth transition, no bounce */
    font-size: 12px; /* Slightly smaller font for better fit */
}

#workspaces button.active {
    color: #090217;
    background: #FC8820;
    min-width: 32px; /* Expand on active for clear indication */
    padding: 0 8px; /* Extra padding active */
}

#workspaces button:hover {
    background: rgba(143, 5, 77, 0.25);
    color: #FEFDFA;
}

/* === Center Clock === */
#clock {
    font-weight: 800;
    padding: 4px 20px;
}

/* === Right Modules === */
#battery {
    color: #FDDF9A;
    background: rgba(143, 5, 77, 0.15);
    padding: 4px 16px;
}

#battery.charging {
    color: #FC8820;
    background: rgba(143, 5, 77, 0.15);
}

#battery.warning {
    color: #FC8820;
    background: rgba(143, 5, 77, 0.15);
}

#battery.critical {
    color: #E5124A;
    background: rgba(143, 5, 77, 0.15);
}

#pulseaudio {
    color: #FDDF9A;
    background: rgba(143, 5, 77, 0.15);
    padding: 4px 16px;
}

#network {
    color: #FDDF9A;
    background: rgba(143, 5, 77, 0.15);
    padding: 4px 16px;
}

#bluetooth {
    color: #FDDF9A;
    background: rgba(143, 5, 77, 0.15);
    padding: 4px 16px;
}

#custom-power {
    color: #E5124A;
    background: rgba(143, 5, 77, 0.15);
    padding: 0 4px 0px 6px;
    margin-right: 4px;
    border-radius: 8px;
}

#power-profiles-daemon {
    color: #FDDF9A;
    background: rgba(143, 5, 77, 0.15);
    padding: 4px 16px;
}

#power-profiles-daemon.power-saver {
    color: #FDDF9A;
    background: rgba(143, 5, 77, 0.15);
}

#power-profiles-daemon.balanced {
    color: #FC8820;
    background: rgba(143, 5, 77, 0.15);
}

#power-profiles-daemon.performance {
    color: #E5124A;
    background: rgba(143, 5, 77, 0.15);
}

/* Hover Effects */
#custom-launcher:hover,
#workspaces:hover,
#clock:hover,
#network:hover,
#battery:hover,
#pulseaudio:hover,
#custom-power:hover,
#power-profiles-daemon:hover {
    background: rgba(143, 5, 77, 0.25);
}
/* Tray */
#tray {
    padding: 0 16px;
    background: rgba(143, 5, 77, 0.25); /* Slightly darker/distinct */
    border: 1px solid #5C0143; 
}


#custom-notification {
    color: #FC8820; /* Accent color for bell */
    background: rgba(143, 5, 77, 0.15);
    padding: 0 8px 0px 10px; /* Better padding */
    margin-right: 4px;
    border-radius: 4px;
    font-size: 16px; /* Larger icon */
}
